{% extends "@ezdesign/hubspot_layout.html.twig" %}

{% trans_default_domain 'views' %}

{% block title %}{{ 'hubspot.view.settings.title'|trans|desc('eZ Platform Hubspot Settings') }}{% endblock %}

{% block content %}
    <div class="row align-items-stretch ez-main-row">
        {% block left_sidebar %}
            <div class="bg-dark pt-4 px-0 ez-side-menu">
                <div class="ez-sticky-container">
                    {% set sidebar_left = knp_menu_get('hubspot.menu.settings.sidebar_left', [], {}) %}
                    {{ knp_menu_render(sidebar_left, {
                        'template': '@ezdesign/ui/menu/sidebar_left.html.twig'
                    }) }}
                </div>
            </div>
        {% endblock left_sidebar %}

        <div class="px-0 ez-content-container">
            <div class="ez-header">
                <div class="container">

                    {% include '@ezdesign/ui/breadcrumbs.html.twig' with { items: [
                        { value: 'hubspot.view.Hubspot'|trans|desc('Hubspot') },
                        { value: 'hubspot.view.settings.name'|trans|desc('Settings')},
                    ]} %}

                    {% include '@ezdesign/ui/page_title.html.twig' with {
                        title: 'hubspot.view.settings.name'|trans|desc('Settings'),
                        iconName: 'content-type'
                    } %}

                </div>
            </div>
            <div class="container-fluid ez-main-container container mt-4 px-5">

                {% if access_denied is defined %}
                    {{ 'hubspot.view.access_denied'|trans|desc('You are not allowed to access this view. Please contact the website adminisrator') }}
                {% else %}

                    <div class="display-results">

                        <img class="hubspot_logo" style="-webkit-user-select: none;margin: auto;" src="/bundles/ezplatformhubspot/img/hubspot_logo.png" alt="">

                        <p>{{ 'hubspot.view.settings.text'|trans|desc('Interface to manage your Hubspot settings') }}</p>

                        <p>External Links:</p>
                        <ul>
                            <li>
                                <a href="https://app.hubspot.com/" target="_blank">Hubspot Account</a>
                            </li>
                            <li>
                                <a href="https://developers.hubspot.com/docs" target="_blank">Hubspot API</a>
                            </li>
                        </ul>


                    </div>


                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
